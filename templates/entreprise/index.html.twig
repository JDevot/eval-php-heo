{% extends 'base.html.twig' %}

{% block title %}Entreprise index
{% endblock %}

{% block body %}
	{% for message in app.flashes('error') %}
		<div id="delete-error" class="alert alert-danger">{{ message }}</div>
	{% endfor %}
	{% for message in app.flashes('success') %}
		<div id="delete-error" class="alert alert-success">{{ message }}</div>
	{% endfor %}
	<div class="container-fluid">
		<h2>
			Liste des Entreprises
		</h2>
		<a href="{{ path('entreprise_new') }}" class="btn btn-primary mb-3">Ajouter une nouvelle entreprise</a>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Tableau entreprise
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>Nom</th>
										<th>Adresse</th>
										<th width="15%">actions</th>
									</tr>
								</thead>
								<tbody>
									{% for entreprise in entreprises %}
										<tr>
											<td>{{ entreprise.name }}</td>
											<td>{{ entreprise.adress }}</td>
											<td>
											<div class="row">
												<a class="btn btn-sm btn-primary" href="{{ path('entreprise_show', {'id': entreprise.id}) }}" class="btn btn-primary">Voir d√©tails</a>
												<a class="btn btn-sm btn-info ml-3" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}" class="btn btn-primary">Edition</a>
											</div>
											</td>
										</tr>
									</div>
								</tbody>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
