<form method="post" action="{{ path('entreprise_delete', {'id': entreprise.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entreprise.id) }}">
    <button class="btn btn-sm btn-danger mt-3">Supprimer</button>
</form>
{% for message in app.flashes('error') %}
        <div id="delete-error" class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div id="delete-error" class="alert alert-success">{{ message }}</div>
    {% endfor %}