{% extends 'base.html.twig' %}
{% block title %}Client index
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<h2>
			Liste des utilisateurs
		</h2>
		<a href="{{ path('user_new') }}" class="btn btn-primary mb-3">Ajouter un nouveau utilisateur</a>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Tableau utilisateurs
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>Email</th>
										<th>Roles</th>
										<th>Password</th>
                                        <th>Actions</th>
									</tr>
								</thead>
								<tbody>
									{% for user in users %}
										<tr>
											<td>{{ user.email }}</td>
											<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
											<td>{{ user.password }}</td>
                                            <td>
												<a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-primary">Voir d√©tails</a>
												<a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edition</a>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}