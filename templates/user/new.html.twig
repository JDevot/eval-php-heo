{% extends 'base.html.twig' %}

{% block title %}New
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Nouveau
			{{ template }}</h1>
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<strong>Formulaire d'inscription d'un
							{{ template }}</strong>
					</div>
					<div class="card-body">
						{{ include('user/_form.html.twig') }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{% if template == 'utilisateur' %}
	<a href="{{ path('user_index') }}"><i class="cib-nextdoor"></i></a>
{% else %}
	<a href="{{ path('client_index') }}"><i class="cib-nextdoor"></i></a>
{% endif %}
{% endblock %}
