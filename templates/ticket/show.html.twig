{% extends 'base.html.twig' %}

{% block title %}Ticket
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h2>
			Fiche Ticket
		</h2>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Fiche ticket
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>
											Num√©ro de ticket
										</th>
										<th>Title</th>
										<th>Content</th>
										<th>Etat</th>
										<th>Demande
										</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>
											{{ticket.id}}</td>
										<td>{{ ticket.title }}</td>
										<td>{{ ticket.content }}</td>
										<td>{{ ticket.etat }}</td>
										<td>{{ ticket.demande }}
										</td>
									</tr>
								</tbody>
							</table>
							<div class="row justify-content-start">
							<div class="col-8">
								{% if (is_granted('ROLE_UTILISATEUR')) or (is_granted('ROLE_ADMIN')) %}
									
										<a class="btn btn-sm btn-primary mt-3 " type="submit" href="{{ path('ticket_edit', {'id': ticket.id}) }}">Editer le ticket</a>
								
								{% endif %}
							
									<a href="{{ path('ticket_index') }}" class="btn btn-sm btn-info mt-3"><i class="cib-nextdoor"></i></a>
								
								{% if (is_granted('ROLE_UTILISATEUR')) or (is_granted('ROLE_ADMIN')) %}
									
										{{ include('ticket/_delete_form.html.twig') }}
									
								{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
