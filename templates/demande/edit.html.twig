{% extends 'base.html.twig' %}

{% block title %}Edition Demande
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1>Modification de  la demande</h1>
		<div class="row">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<strong>Formulaire de la demande</strong>
					</div>
					<div class="card-body">
						{{ include('demande/_form.html.twig') }}
