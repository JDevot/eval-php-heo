{% extends 'base.html.twig' %}

{% block title %}Demande
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h2>
			Fiche demande
		</h2>
		<div class="fade-in">
			<div class="row">
				<div class="col-lg-12">
					<div class="card">
						<div class="card-header">
							<i class="fa fa-align-justify"></i>
							Fiche demande
						</div>
						<div class="card-body">
							<table class="table table-reponsive-sm">
								<thead>
									<tr>
										<th>Num√©ro de demande</th>
										<th>Title</th>
										<th>Content</th>
										<th>Proprietaire du ticket </th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>{{ demande.id }}</td>
										<td>{{ demande.title }}</td>
										<td>{{ demande.content }}</td>
										<td>{{ demande.user.email }} </td>
									</tr>
								</tbody>
							</table>
							<div class="row">
								<div class="col-1">
									<a type="submit" href="{{ path('demande_edit', {'id': demande.id}) }}"><i class="cil-comment-square"></i></a>
								</div>
								<div class="col-2">
									<a href="{{ path('demande_index') }}" class="btn btn-sm btn-info mt-3"><i class="cib-nextdoor"></i></a>
								</div>
								{% if (is_granted('ROLE_UTILISATEUR')) or (is_granted('ROLE_ADMIN')) %}
								<div class="col-1">
									{{ include('demande/_delete_form.html.twig') }}
								</div>
								{% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
